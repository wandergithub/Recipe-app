<div class="border border-dark border-2 rounded p-3">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'container d-flex flex-column gap-2' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field d-flex align-items-center gap-3">
      <%= f.label :name, class: 'col-2 text-end' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
    </div>

    <div class="field d-flex align-items-center gap-3">
      <%= f.label :email, class: 'col-2 text-end' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field d-flex align-items-center gap-3">
      <%= f.label :password, class: 'col-2 text-end' %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field d-flex align-items-center gap-3">
      <%= f.label :password_confirmation, class: 'col-2 text-end' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="actions d-flex offset-10 col-2 justify-content-end">
      <%= f.submit "Sign up", class: 'btn btn-primary col-7 btn-lg' %>
    </div>
  <% end %>

  <div class="container pt-3">
    <div class="d-flex gap-3 w-100 justify-content-center">
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>